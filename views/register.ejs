<%- include('partials/header') %>
<div class="container mt-5 animated fadeIn slow">
<!-- <div class="jumbotron centered"> -->


  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
      <form class="form-signin" action="/register" method="POST">
        <!-- <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->
        <h1 class="mb-3 display-4 text-center">Register</h1>
        <label for="inputID" class="sr-only">Minecraft Username</label>
        <input type="text" id="inputID" class="form-control top" placeholder="Minecraft Username" name="mcname" required autofocus>
        <label for="inputFirst" class="sr-only">Email</label>
        <input type="email" id="inputFirst" class="form-control middle" placeholder="Email" name="email" required>
        <label for="inputLast" class="sr-only">Password</label>
        <input type="password" id="inputLast" class="form-control middle2" placeholder="Password" name="psw" required>
        <label for="inputPassword" class="sr-only">Password Repeated</label>
        <input type="password" id="inputPassword" class="form-control bottom" placeholder="Password Repeated" name="psw2" required>
        <!-- <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div> -->
        <button class="btn btn-lg btn-dark btn-block" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>